<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_bar_layout"
    style="@style/AlbumWrapContent.WidthMatchParent"
    android:theme="@style/AlbumAppBarOverlay"
    tools:showIn="@layout/album_activity_album">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/AlbumToolbar.PopupTheme"
        app:navigationIcon="@drawable/system_back">

        <RelativeLayout
            android:id="@+id/complete_layout"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activitycancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:text="取消"
                android:onClick="onClick"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

</android.support.design.widget.AppBarLayout>
